        <script>
		    //给导航增加active属性
		    $('nav>ul.nav>li>a').on("click", function () {
		        $('nav>ul.nav>li').removeClass()
		        $(this).parent('li').addClass('active')
		    })
            
		    $(function () {

                //获取网站标题
		        $.ajax({
		            type: "Get",
		            url: "../Api/Cms/WebSite/Get/@System.Configuration.ConfigurationManager.AppSettings["WebSiteID"]",
		            success: function (msg) {
		                console.log(msg);
		            }
                });


                //获取menus
		        $.ajax({
		            type: "Post",
		            url: "../Api/Cms/CmsChannel/GetWebMenusByWebID?webid=@System.Configuration.ConfigurationManager.AppSettings["WebSiteID"]",
		            success: function (msg) {
		                var menus = "<li class='active'><a href='#'>首页</a></li>";
		                for (var i = 0; i < msg.length; i++)
		                {
		                    menus+=" <li><a href='/"+msg[i].ChannelCode+"/Index.cshtml'>"+msg[i].ChannelName+"</a></li>"
		                }
		                $("#menus").html(menus);
		            }
		        });
		    });
		</script>