<style>
    .itemscls {
        margin-top: 40px;
        margin-bottom:40px;
    }
</style>

<script type="text/javascript">
    Ext.onReady(function () {
        Ext.QuickTips.init();

        new Ext.Viewport({
            layout: "fit",
            border: false,
            items: [
                new Ext.FormPanel({
                    buttonAlign: 'center',
                    labelAlign: "right",
                    layout: "hbox",
                  
                    layoutConfig: {
                        padding: '5',
                        pack: 'center',
                        align: 'middle'
                    },
                    defaults: { margins: '0 5 0 0' },
                    title:"Good",
                    items: [
                        {
                            xtype: 'fieldset',
                            width:600,
                            layout: "form",
                            itemCls: "itemscls",
                            collapsible: false,
                            items: [
                                {
                                    fieldLabel: '名称',
                                    name: 'Name',
                                    xtype: 'textfield',
                                    width: 300
                                }, {
                                    fieldLabel: '类型',
                                    name: 'OrgType',
                                    xtype: 'combo',
                                    //本地数据源  local/remote
                                    mode: 'local',
                                    //设置为选项的text的字段
                                    displayField: "Name",
                                    //设置为选项的value的字段 
                                    valueField: "Id",
                                    //是否可以输入，还是只能选择下拉框中的选项
                                    editable: false,
                                    typeAhead: true,
                                    //必须选择一项
                                    forceSelection: true,
                                    //输入部分选项内容匹配的时候显示所有的选项
                                    triggerAction: 'all',
                                    //selectOnFocus:true,
                                    //数据
                                    store: new Ext.data.SimpleStore({
                                        fields: ['Id', 'Name'],
                                        data: [[1, '单位'], [2, '部门'], [3, '岗位']]
                                    }),
                                    width: 300
                                }, {
                                    fieldLabel: '状态',
                                    name: 'InUse',

                                    xtype: 'combo',
                                    //本地数据源  local/remote
                                    mode: 'local',
                                    //设置为选项的text的字段
                                    displayField: "Name",
                                    //设置为选项的value的字段 
                                    valueField: "Id",
                                    //是否可以输入，还是只能选择下拉框中的选项
                                    editable: false,
                                    typeAhead: true,
                                    //必须选择一项
                                    forceSelection: true,
                                    //输入部分选项内容匹配的时候显示所有的选项
                                    triggerAction: 'all',
                                    //selectOnFocus:true,
                                    //数据
                                    store: new Ext.data.SimpleStore({
                                        fields: ['Id', 'Name'],
                                        data: [[1, '启用'], [2, '停用']]
                                    }),
                                    width: 300
                                }, {
                                    fieldLabel: '备注',
                                    xtype: 'textarea',
                                    name: "Remark",
                                    height: 50,
                                    width: 300
                                }, {
                                    xtype: 'compositefield',
                                    style: "margin-top:30px",
                                    fieldLabel: '移动',
                                    items: [
                                        { xtype: 'textfield', id: "move", readonly: true, width: 250 },
                                        {
                                            xtype: 'button', width: 50, text: "选择", style: "left:250px", listeners: {
                                                click: function (btn, e) {
                                                    CreateMoveWindow().show();
                                                },
                                                render: function (btn, e) {
                                                    console.log(btn);
                                                }
                                            }
                                        },
                                        { xtype: 'button', width: 50, text: "确定移动", style: "margin-left:0px;margin-right:0px;" },
                                    ]
                                }
                            ]
                        }
                    ],
                  
                })]
        });

    })

    function CreateMoveWindow() {

        function addNode(node) {
            var root = Ext.getCmp("treepanel2").getRootNode();
            var newnode = node.attributes;
            root.appendChild(newnode);
        }

        var treepanel1 = {
            flex: 1,
            id: "treepanel1",
            xtype: 'treepanel',
            autoScroll: true,
            split: true,
            loader: new Ext.tree.TreeLoader({
                url: '/Api/Organization/GetOrganizationsAndUser?id=null',
                requestMethod: "POST"
            }),
            root: new Ext.tree.AsyncTreeNode({
                expanded: false,
            }),
            rootVisible: false,
            listeners: {
                dblclick: function (node,e) {
                    addNode(node);
                }
            }
        }
        var treepanel2 = {
            flex: 1,
            id:"treepanel2",
            xtype: "treepanel",
            loader: new Ext.tree.TreeLoader(),
            rootVisible:false,
            root:{
                name: 'Root',
            },
            listeners: {
                dblclick: function (node,e) {
                    node.remove();
                }
            }
        }

        return new Ext.Window({
            title: "移动",
            width: 600,
            height: 500,
            layout: 'fit',
            items: [{
                layout: 'hbox',
                layoutConfig: {
                    align: 'stretch',
                    pack: 'start',
                },
                baseCls: 'x-plain',
                items: [
                    treepanel1,
                    {
                        xtype: "panel",
                        width: 100,
                        defaults: { margins: '0 0 10 0' },
                        layout: {
                            type: 'vbox',
                            padding: '5',
                            pack: 'center',
                            align: 'center'
                        },
                        items: [
                            { xtype: "button", text: "btn1", width: 50, style: "margin-top:10px" },
                            { xtype: "button", text: "btn2", width: 50, style: "margin-top:10px" },
                            { xtype: "button", text: "btn3", width: 50, style: "margin-top:10px" },
                        ]
                    },
                   treepanel2
                ]
            }]
        })
    }

</script>
